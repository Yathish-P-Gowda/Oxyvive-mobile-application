<Login>:
    orientation: 'vertical'
    MDFloatLayout:
        id: main
        canvas.before:
            Color:
                rgba: (1, 0, 0, 1)  # Red color
            Rectangle:
                pos: self.pos
                size: self.size

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_x": 0.1, "center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            on_release: root.on_back_button()

        # Logo and Brand
        Image:
            source: 'images/shot.png'
            size_hint: .4, .4
            pos_hint: {"center_x": .5, "center_y": .85}

        MDLabel:
            text: "Oxivive"
            font_name: "Roboto-Bold"
            font_size: "40sp"
            font_style: 'H2'
            pos_hint: {"center_x": .5, "center_y": .75}
            halign: "center"
            color: (1, 1, 1, 1)  # White color for visibility

        # Welcome message
        MDLabel:
            text: "Welcome back!"
            font_name: "Roboto-Italic"
            font_size: "24sp"
            font_style: 'H4'
            pos_hint: {"center_x": .5, "center_y": .68}
            halign: "center"
            color: (1, 1, 1, 1)  # White color for visibility
        MDLabel:
            text: "Log in to continue!"
            font_name: "Roboto-Regular"
            font_size: "20sp"
            font_style: 'H5'
            pos_hint: {"center_x": .5, "center_y": .62}
            halign: "center"
            color: (1, 1, 1, 1)

        # White background area for login
        MDFloatLayout:
            size_hint: 1, .5
            pos_hint: {"center_x": .5, "center_y": .25}
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 1)  # White color
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDFloatLayout:
                size_hint: .7, .12
                pos_hint: {"center_x": .5, "center_y": .85}
                canvas.before:
                    Color:
                        rgba: (255, 255, 255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [16, 16, 16, 16]

                MDTextField:
                    id: login_email
                    hint_text: "  Mobile Number / Email ID"
                    mode: "rectangle"
                    icon_right: "account"
                    icon_right_color: 1, 0, 0, 1
                    font_name: "Roboto"
                    helper_text: ''
                    keyboard_suggestions: True
                    helper_text_mode: 'on_error'
                    required: True
                    pos_hint: {"center_x": .5, "center_y": .85}
                    multiline: False
                    write_tab: False
                    line_color_focus: 1, 0, 0, 1
                    hint_text_color_focus: 1, 0, 0, 1
                    on_focus: root.helper()

            MDFloatLayout:
                size_hint: .7, .12
                pos_hint: {"center_x": .5, "center_y": .7}
                canvas.before:
                    Color:
                        rgba: (255, 255, 255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [16, 16, 16, 16]

                MDTextField:
                    id: login_password
                    hint_text: "  Password"
                    mode: "rectangle"
                    font_name: "Roboto"
                    helper_text: ''
                    helper_text_mode: 'on_error'
                    required: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    cursor_width: "2sp"
                    multiline: False
                    keyboard_suggestions: True
                    password: not show_password_button.active
                    write_tab: False
                    line_color_focus: 1, 0, 0, 1
                    hint_text_color_focus: 1, 0, 0, 1
                    on_focus: root.helper()

                MDIconButton:
                    id: show_password_button
                    pos_hint: {"center_x": .94, "center_y": .5}
                    active: False  # Initial state is password hidden
                    icon: "eye-off"
                    theme_text_color: "Custom"
                    text_color: 1, 0, 0, 1
                    on_release:
                        self.active = not self.active
                        login_password.password = not self.active
                        self.icon = "eye" if self.active else "eye-off"
            Button:
                id: login_button
                text: "LOGIN"
                font_size: "18sp"
                size_hint: .7, .12
                pos_hint: {"center_x": .50, "center_y": .45}
                background_color: 0, 0, 0, 0
                font_name: "Roboto"
                on_release:
                    root.login_page()
                canvas.before:
                    Color:
                        rgb: 1, 0, 0, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [17, 17, 17, 17]

            MDTextButton:
                text: "Forgot Password?"
                pos_hint: {"center_x": .5, "center_y": .32}
                color: 1, 0, 0, 1
                font_size: "12sp"
                font_name: "Roboto"
                on_release: root.forgot_password()

            MDLabel:
                text: "or"
                color: 0.29, 0.29, 0.29, 1
                pos_hint: {"center_y": .27}
                font_size: "13sp"
                font_name: "Roboto"
                halign: "center"

            MDFloatLayout:
                md_bg_color: 0.7, 0.7, 0.7, 1
                size_hint: .3, .002
                pos_hint: {"center_x": .3, "center_y": .27}
            MDFloatLayout:
                md_bg_color: 0.7, 0.7, 0.7, 1
                size_hint: .3, .002
                pos_hint: {"center_x": .7, "center_y": .27}

            MDRoundFlatIconButton:
                text: "Login with OTP"
                icon: "key"
                icon_color : 1,0,0,1
                pos_hint: {'center_x': 0.5, 'center_y': 0.17}
                text_color: 1, 0, 0, 1  # Red color for text
                line_color: 1, 0, 0, 1  # Red color for border
                on_release: root.send_otp()


            MDTextButton:
                text: "Don't have an account? Sign up"
                font_name: "Roboto"
                font_size: "14sp"
                pos_hint: {"center_x": .5, "center_y": .07}
                color: 1, 0, 0, 1
                on_release: root.manager.push("signup")